<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="userService"
		class="by.htp.car_catalog.service.impl.UserServiceImpl">
		<property name="userDao" ref="userDao" />
	</bean>

	<bean id="brandService"
		class="by.htp.car_catalog.service.impl.BrandServiceImpl">
		<property name="brandDao" ref="brandDao" />
	</bean>

	<bean id="modelService"
		class="by.htp.car_catalog.service.impl.ModelServiceImpl">
		<property name="modelDao" ref="modelDao" />
	</bean>

</beans>
